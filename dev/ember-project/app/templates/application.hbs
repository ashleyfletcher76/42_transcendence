{{!-- app/templates/application.hbs --}}
<main>

<div id="ember-bootstrap-wormhole"></div>

<div class="container-fluid">
  <div class="row">
    <div class="col header">
     <ProfileOwn />
    </div>
    <div class="col header">
        <ProfileOther />
    </div>
  </div>
  <div class="row">
    <div class="container-fluid col middle">
        <div class="button-container spacing">
            <LinkTo @route="pong-game" class="nav-button">Game</LinkTo>
            <LinkTo @route="chat" class="nav-button">Chat</LinkTo>
            <LinkTo @route="tournament" class="nav-button">Create Tournament</LinkTo>
        </div>
    </div>
    <div class="container-fluid col-6 middle">
		{{outlet}}
    </div>
    <div class="container-fluid col middle">
      <NavigationBar />
      <UserList/>
    </div>
  </div>
  <div class="row">
    <div class="container-fluid col footer">
      <h2 class="name">Tournaments</h2>
      <TournamentList/>
    </div>
    <div class="container-fluid col-6 footer">
      <Scoreboard />
    </div>
    <div class="container-fluid col footer">
	  <DirectMessage/>
    </div>
  </div>    
</div>

</main>
